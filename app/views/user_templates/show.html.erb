

<h1> <%= @the_user.username %> </h1>

<dl>
    <dt> ID </dt>
    <dd> <%= @the_user.id %></dd>

    <dt> Edit user </dt>
    <dd> 
      <form action="/update_user/<%= @the_user.username %>">

        <label for="user_id"> Username  </label>
        <input id="user_id" name="query_user" placeholder="<%= @the_user.username %>">   

        <button> Update user  </button>
      </form> 
      
    </dd>
</dl>

<h1>  Own Photos (<%= @the_user.own_photos.length %>) </h1>

<table border="1">
  <tr>
    <th>  Image    </th>
    <th>  Owner    </th>
    <th>  Caption   </th>
    <th>  Posted    </th>
    <th>    </th>
  </tr>

  <% @the_user.own_photos.each do |a_photo|%>
  <tr>
    <td> <img src = "<%= a_photo.image %>">  </td>
    <td>  <%= a_photo.owner_id %>    </td>
    <td>  <%= a_photo.caption %>   </td>
    <td>  <%= a_photo.created_at %>    </td>
    <td>  <a href= "/photos/<%= a_photo.id %>"> Show details </a>   </td>
  </tr>

  <% end %>

</table>
</dl>
